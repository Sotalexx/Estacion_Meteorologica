<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/background_main">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTituloInformes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informes de Clima"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Filtros de fecha -->
    <LinearLayout
        android:id="@+id/filtrosFecha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloInformes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnSeleccionarFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar fecha"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvFechaSeleccionada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/06/2025"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/black" />

    </LinearLayout>

    <!-- RecyclerView para mostrar datos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerInformes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/filtrosFecha"
        app:layout_constraintBottom_toTopOf="@id/btnExportarPdf"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón Exportar PDF -->
    <Button
        android:id="@+id/btnExportarPdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exportar a PDF"
        android:drawableStart="@drawable/ic_tendencia"
        android:drawablePadding="8dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>



