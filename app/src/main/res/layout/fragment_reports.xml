<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="14dp"
    android:background="@drawable/background_main">

    <!--Header-->
    <LinearLayout
        android:id="@+id/LLheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--Boton de regresar-->
        <Button
            android:id="@+id/btnCerrarSesion"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:backgroundTint="#66FFFFFF"
            android:paddingStart="15dp"
            app:icon="@drawable/arrow_back"
            app:iconTint="@color/gris" />

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="San Miguel \nCiudad Real"
            android:textColor="@color/gris"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnPerfil"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:backgroundTint="#66FFFFFF"
            android:paddingStart="11.5dp"
            app:icon="@drawable/ic_user"
            app:iconTint="@color/gris" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/seccionFecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        android:layout_marginTop="3dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LLheader">

        <LinearLayout
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="12dp"
            android:paddingBottom="6dp"
            android:paddingHorizontal="8dp">

            <TextView
                android:id="@+id/titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="4dp"
                android:fontFamily="@font/sofia_sans"
                android:text="Weather Nest"
                android:textSize="16sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/btnSeleccionarFecha"
                android:layout_width="45dp"
                android:layout_height="52dp"
                android:contentDescription="Seleccionar fecha"
                android:backgroundTint="#F0F0F0"
                android:paddingStart="13dp"
                android:layout_marginEnd="8dp"
                app:icon="@drawable/ic_calendario"
                app:iconTint="@color/black" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:background="@drawable/bg_rounded_lightgray"
                android:orientation="horizontal">

                <!-- Dia  -->
                <TextView
                    android:id="@+id/tvDia"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_marginStart="4dp"
                    android:paddingHorizontal="12dp"
                    android:text="00"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="10dp"
                    android:background="@color/gris" />

                <!-- Mes -->
                <TextView
                    android:id="@+id/tvMes"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:paddingHorizontal="12dp"
                    android:text="00"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="10dp"
                    android:background="@color/gris" />

                <!-- Año -->
                <TextView
                    android:id="@+id/tvAnio"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:paddingHorizontal="12dp"
                    android:text="0000"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvSinRegistros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="14dp"
        android:fontFamily="@font/sofia_sans"
        android:gravity="center"
        android:text="Sin cargar registros aún..."
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seccionFecha" />

    <!-- RecyclerView para mostrar datos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerInformes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seccionFecha" />

    <!-- Exportar PDF -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnExportarPdf"
        android:layout_width="60dp"
        android:layout_height="65dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="2dp"
        android:backgroundTint="@color/white"
        android:contentDescription="Exportar PDF"
        app:icon="@drawable/ic_pdf"
        app:iconTint="#B71C1C"
        app:cornerRadius="16dp"
        app:iconSize="30dp"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>



